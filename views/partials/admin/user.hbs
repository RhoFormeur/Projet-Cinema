{{!-- 1 User --}}
<tr class="table-secondary">
    <td>{{this.username}}</td>
    <td class="d-flex justify-content-end gap-1">
        <button type="button" class="btn btn-warning" data-bs-toggle="collapse"
            data-bs-target="#collapseReadUser{{this.id_user}}" aria-expanded="false"
            aria-controls="collapseReadUser{{this.id_user}}">
            <i class="fa-regular fa-eye"></i></button>

        <button type="button" class="btn btn-warning" data-bs-toggle="collapse"
            data-bs-target="#collapseUpdateUser{{this.id_user}}" aria-expanded="false"
            aria-controls="collapseUpdateUser{{this.id_user}}">
            <i class="fa-regular fa-pen-to-square"></i></button>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
            data-bs-target="#modalDeleteUser{{this.id_user}}">
            <i class="fa-regular fa-trash-can"></i></button>
    </td>
</tr>

{{!-- Collapse Read --}}
<tr class="table-warning">
    <td colspan="2" class="collapse" id="collapseReadUser{{this.id_user}}">
        <div class="card card-body">
            <p>Identifiant : {{this.username}}</p>
            <p>Prénom : {{this.firstname}}</p>
            <p>Nom : {{this.lastname}}</p>
            <p>Mot de passe : {{this.password}}</p>
            <p>Adresse mail : {{this.email}}</p>
        </div>
    </td>
</tr>

{{!-- Collapse Update --}}
<tr class="table-warning">
    <td colspan="2" class="collapse" id="collapseUpdateUser{{this.id_user}}">
        <form class="card card-body">
            <div class="d-flex flex-column">
                <label for="inputTitle">Identifiant</label>
                <input type="text" name="title" id="inputTitle" value="{{this.username}}">
            </div>
            <div class="d-flex flex-column mt-2">
                <label for="inputTitle">Prénom</label>
                <input type="text" name="title" id="inputTitle" value="{{this.firstname}}">
            </div>
            <div class="d-flex flex-column mt-2">
                <label for="inputTitle">Nom</label>
                <input type="text" name="title" id="inputTitle" value="{{this.lastname}}">
            </div>
            <div class="d-flex flex-column mt-2">
                <label for="inputTitle">Mot de passe</label>
                <input type="password" name="title" id="inputTitle" value="{{this.password}}">
            </div>
            <div class="d-flex flex-column mt-2">
                <label for="inputTitle">Email</label>
                <input type="text" name="title" id="inputTitle" value="{{this.email}}">
            </div>
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </form>
    </td>
</tr>

{{!-- Modal Delete User --}}
<div class="modal fade" id="modalDeleteUser{{this.id_user}}" tabindex="-1"
    aria-labelledby="modalDeleteUser{{this.id_user}}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalDeleteUser{{this.id_user}}">Confirmer</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Vous confirmez la suppression de cet utilisateur ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger">Oui</button>
                <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Non</button>
            </div>
        </div>
    </div>
</div>