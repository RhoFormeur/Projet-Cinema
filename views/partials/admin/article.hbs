{{!-- 1 Article --}}
<tr class="table-secondary">
    <td>{{this.title}}</td>
    <td class="d-flex justify-content-end gap-1">
        <button type="button" class="btn btn-warning" data-bs-toggle="collapse"
            data-bs-target="#collapseReadArticle{{this.id_article}}" aria-expanded="false"
            aria-controls="collapseReadArticle{{this.id_article}}">
            <i class="fa-regular fa-eye"></i></button>

        <button type="button" class="btn btn-warning" data-bs-toggle="collapse"
            data-bs-target="#collapseUpdateArticle{{this.id_article}}" aria-expanded="false"
            aria-controls="collapseUpdateArticle{{this.id_article}}">
            <i class="fa-regular fa-pen-to-square"></i></button>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
            data-bs-target="#modalDeleteArticle{{this.id_article}}">
            <i class="fa-regular fa-trash-can"></i></button>
    </td>
</tr>

{{!-- Collapse Read --}}
<tr class="table-warning">
    <td colspan="2" class="collapse" id="collapseReadArticle{{this.id_article}}">
        <div class="card card-body">
            <article class="row row-cols-1 row-cols-lg-2 m-0">
                <img class="col p-2" src="https://image.tmdb.org/t/p/original{{this.poster_path}}" alt="Affiche" />
                <div class="col m-0 p-2">
                    <h4>Titre : {{this.title}}</h4>
                    <p>Sortie : {{formatDate this.release_date 'DD/MM/YYYY'}}</p>
                    <p>Durée : 2h 20min</p>
                    <p>Certificat : Tous publics</p>
                    <p>Genre : Action - Aventure - Fantastique</p>
                    <p>Réalisateur : George Lucas</p>
                    <p>Acteurs principaux : Ewan McGregor, Natalie Portman, Hayden Christensen</p>
                    <p>Résumé :{{this.overview}}</p>
                </div>
            </article>
        </div>
    </td>
</tr>

{{!-- Collapse Update --}}
<tr class="table-warning">
    <td colspan="2" class="collapse" id="collapseUpdateArticle{{this.id_article}}">
        <div class="card card-body">
            <article class="row row-cols-1 row-cols-lg-2 m-0">
                <img class="col p-2" src="https://image.tmdb.org/t/p/original{{this.poster_path}}" alt="Affiche" />
                <div class="col m-0 p-2">
                    <h4>Titre : {{this.title}}</h4>
                    <p>Sortie : {{formatDate this.release_date 'DD/MM/YYYY'}}</p>
                    <p>Durée : 2h 20min</p>
                    <p>Certificat : Tous publics</p>
                    <p>Genre : Action - Aventure - Fantastique</p>
                    <p>Réalisateur : George Lucas</p>
                    <p>Acteurs principaux : Ewan McGregor, Natalie Portman, Hayden Christensen</p>
                    <p>Résumé :{{this.overview}}</p>
                </div>
            </article>
        </div>
    </td>
</tr>

{{!-- Modal Delete Article --}}
<div class="modal fade" id="modalDeleteArticle{{this.id_article}}" tabindex="-1" aria-labelledby="modalDeleteArticle{{this.id_article}}"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalDeleteArticle{{this.id_article}}">Confirmer</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Vous confirmez la suppression de cet article ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger">Oui</button>
                <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Non</button>
            </div>
        </div>
    </div>
</div>