{{!-- List User --}}
<div class="container-fluid p-3">
    <h3 class="bg-light">Commentaires signalés</h3>
    <table class="table bg-light">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th>Date du signalement</th>
            </tr>
        </thead>
            <tbody>
                {{#each comments}}
                {{> admin/comment_admin data=this}}
                {{/each}}
            </tbody>
    </table>
</div>

{{!-- List User --}}
<div class="container-fluid p-3">
    <h3 class="bg-light">Utilisateurs</h3>
    <table class="table bg-light">
        <thead>
            <tr>
                <th scope="col">Username</th>
            </tr>
        </thead>
            <tbody>
                {{#each users}}
                {{> admin/user data=this}}
                {{/each}}
            </tbody>
    </table>
</div>

{{!-- List Article --}}
<div class="container-fluid p-3">
    <h3 class="bg-light">Articles</h3>
    <table class="table bg-light">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col" class="d-flex justify-content-end"><button type="button" class="btn btn-warning"
                        data-bs-toggle="modal" data-bs-target="#AddArticle">Ajouter</i></button></th>
            </tr>
        </thead>
            <tbody>
                {{#each articles}}
                {{> admin/article data=this}}
                {{/each}}
            </tbody>
    </table>
</div>

{{!-- Modal Add Article --}}
<div class="modal fade" id="AddArticle" tabindex="-1" aria-labelledby="AddArticle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="AddArticle">Ajout Article</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/admin" method="post">
                    <div class="mb-3">
                        <label for="addIdArticle" class="form-label">Id Article</label>
                        <input type="text" class="form-control" id="addIdArticle" name="id_article">
                    </div>

                    <div class="mb-3">
                        <label for="addTitle" class="form-label">Titre</label>
                        <input type="text" class="form-control" id="addTitle" name="title">
                    </div>

                    <div class="mb-3">
                        <label for="addReleaseDate" class="form-label">Date de sortie</label>
                        <input type="text" class="form-control" id="addReleaseDate" name="release_date">
                    </div>

                    <div class="d-flex flex-column mb-3">
                        <label for="addOverview" class="form-label">Résumé</label>
                        <textarea id="addOverview" rows="5" name="overview"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="addPosterPath" class="form-label">Chemin image</label>
                        <input type="text" class="form-control" id="addPosterPath" name="poster_path">
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-warning">Ajouter</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>