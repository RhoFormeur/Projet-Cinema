{{!-- List User --}}
<div class="container-fluid p-3">
    <h3 class="bg-light">Utilisateurs</h3>
    <table class="table table-scroll bg-light">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Role</th>
                <th scope="col" class="d-flex justify-content-end"><button type="button" class="btn btn-warning"
                        data-bs-toggle="modal" data-bs-target="#modalAddUser">Ajouter</i></button></th>
            </tr>
        </thead>
        <div class="w-100 h-50 overflow-auto">
            <tbody>
                {{#each user}}
                {{> admin/user data=this}}
                {{/each}}
            </tbody>
        </div>
    </table>
</div>

{{!-- List Article --}}
<div class="container-fluid p-3">
    <h3 class="bg-light">Articles</h3>
    <table class="table table-scroll bg-light">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col" class="d-flex justify-content-end"><button type="button" class="btn btn-warning"
                        data-bs-toggle="modal" data-bs-target="#modalAddArticle">Ajouter</i></button></th>
            </tr>
        </thead>
        <div class="w-100 h-50 overflow-auto">
            <tbody>
                {{#each list}}
                {{> admin/article data=this}}
                {{/each}}
            </tbody>
        </div>
    </table>
</div>

{{!-- Modal Add User --}}
<div class="modal fade" id="modalAddUser" tabindex="-1" aria-labelledby="modalAddUser" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalAddUser">Ajout Utilisateur</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="mb-3">
                        <label for="inputUsername" class="form-label">Identifiant</label>
                        <input type="text" class="form-control" id="inputUsername">
                    </div>

                    <div class="mb-3">
                        <label for="inputMail" class="form-label">Mail</label>
                        <input type="email" class="form-control" id="inputMail">
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de Passe</label>
                        <input type="password" id="inputPassword" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="inputConfirm" class="form-label">Confirmer</label>
                        <input type="password" id="inputConfirm" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="roleSelect" class="form-label">Rôle</label>
                        <select id="roleSelect" class="form-select">
                            <option>Grand Maître</option>
                            <option>Maître de l'ordre</option>
                            <option>Chevalier Jedi</option>
                            <option>Padawan</option>
                            <option>Initié</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-warning">Ajouter</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

{{!-- Modal Add Article --}}
<div class="modal fade" id="modalAddArticle" tabindex="-1" aria-labelledby="modalAddArticle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalAddArticle">Ajout Article</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="mb-3">
                        <label for="inputTitre" class="form-label">Titre</label>
                        <input type="text" class="form-control" id="inputTitre">
                    </div>

                    <div class="mb-3">
                        <label for="inputYear" class="form-label">Année</label>
                        <input type="text" class="form-control" id="inputYear">
                    </div>

                    <div class="mb-3">
                        <label for="inputGenre" class="form-label">Genre</label>
                        <input type="text" id="inputGenre" class="form-control">
                    </div>

                    <div class="d-flex flex-column mb-3">
                        <label for="inputResume" class="form-label">Résumé</label>
                        <textarea id="inputResume" rows="5"></textarea>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-warning">Ajouter</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>